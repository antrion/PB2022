{{> header }}

{{#if carritos}}
<main role="main" class="container">
    <h2 class="mt-5">Lista de Carritos</h2>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Código</th>
                <th scope="col">Precio</th>
                <th scope="col">Imágen</th>
                <th scope="col">Stock</th>
            </tr>
        </thead>
    <tbody>
    {{#each carritos}}
    <tr>
        <th scope="col">{{this.productos.name}}</th>
        <th scope="col">{{this.productos.desc}}</th>
        <th scope="col">{{this.productos.code}}</th>
        <th scope="col">{{this.productos.price}}</th>
        <th scope="col"><img src={{this.productos.thumbnail}} alt={{this.productos.name}} width="100" height="100"></th>
        <th scope="col">{{this.productos.stock}}</th>
    </tr>

    {{/each}}
    </tbody>
    </table>
</main>
{{else}}
<h3>No se encontraron productos en el carrito</h3>
{{/if}}