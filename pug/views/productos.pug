html
    include ./include/header.pug
    h2 Vista de Productos
    console.log(productos)
    if productos
        main(role="main" class="container")
            h1(class="mt-5") Productos
            table(class="table table-dark")
                thead
                    tr
                        th(scope="col") Nombre
                        th(scope="col") Precio
                        th(scope="col") Im√°gen
            tbody
                each producto in productos
                    tr
                        th(scope="col") #{producto.name}
                        th(scope="col") #{producto.price}
                        th(scope="col")
                            img(src= producto.thumbnail alt= producto.name width="100" height="100")
    else
        h3 No se encontraron productos
    a(href="/") Cargar Productos
